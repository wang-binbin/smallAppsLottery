/* pages/myBalance/myBalance.wxss */

page {
  background: #f2f2ef;
}

.balanceList {
  background: #fff;
  border-radius: 10px;
  width: 345px;
  height: 90px;
  margin: 10px auto;
}

.currencyLogo {
  width: 42px;
  height: 42px;
  float: left;
  padding: 24px 15px;
}

.currencyLogo image {
  width: 42px;
  height: 42px;
  border-radius: 50%;
}

.contentTxt {
  float: left;
margin-top: 22px;
}
.nameTxt{font-size: 17px;
color: #272727;}
.number{
  font-size: 15px;
  line-height: 25px;
color: #767676;
}
.kind{
  font-size: 12px;
color: #767676;
}
.rig{
  width: 6px;
  height: 12px;
float: right;
margin-top: 30px;
margin-right: 15px;
}
.rig image{
  width: 100%;
  height: 100%;
}
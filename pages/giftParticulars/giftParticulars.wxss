/* pages/giftParticulars/giftParticulars.wxss */

.body {
  background: #f2f2ef;
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
}

.content {
  clear: both;
}
.shareBtn{
width: 100%;
height: 100%;
position: absolute;
right: 0;
top: 0;
z-index: 2;
opacity:0;
}
.contentList {
  width: 100%;
}

.contentHead {
  height: 180px;
  position: relative;
}

.userBack {
  height: 100%;
  width: 100%;
}

.prize {
  color: #444;
  font-size: 17px;
  line-height: 50px;
  background: #fff;
  padding-left: 15px;
}

.lotteryData {
  padding-left: 15px;
  height: 30px;
  background: #fff;
}

.lotteryData view {
  float: left;
  font-size: 13px;
  color: #939393;
}

.lotteryWay {
  margin-left: 7px;
}

.lotteryData .participationY {
  font-size: 13px;
  margin-left: 3px;
  color: #53ad21;
}

.lotteryData  .vertical {
  margin: 0 5px;
  height: 15px;
  overflow: hidden;
  color: #c3c3c3;
}

.producePhoto, .share {
  width: 92%;
  margin: 0px auto;
  margin-top: 38px;
  position: relative;
  height: 45px;
  font-size: 16px;
  text-align: center;
  line-height: 45px;
  color: #fff;
  background: #fa7635;
  border-radius: 5px;
}

.producePhoto {
  margin-top: 30px;
  background: #fff;
  color: #5d5d5d;
}

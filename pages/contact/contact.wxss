/* pages/contact/contact.wxss */

.headTxt{
  width: 88px;
  height: 88px;
  margin: 0 auto;
  margin-top: 25px;
  margin-bottom: 15px;
}
.headTxt image{
  width: 100%;
  height: 100%;
}
.padding{
  height: 10px;
  width: 100%;
background: #F2F2EF;
}
.giftTxt{
  font-size: 17px;
color: #474747;
text-align: center;
margin-bottom: 42px;
}
.titkeImg{
  float: left;
  width: 7px;
  height: 7px;
margin: 7px 7px 0 15px; 
}
.titkeImg image{
  width: 100%;
  height: 100%;
  display: block;
}
.titkeTxt{
  float: left;
  font-size: 15px;
color: #313131;
}
.contenTxt{
  font-size: 13px;
color: #6C6C6C;
margin: 8px 0 46px 29px ;
}
.QRcode{
  width: 150px;
  height: 150px;
  margin: 0 auto;
  margin-top: 16px;
}
.QRcode image{
  display: block;
  width: 100%;
  height: 100%;
}
.copyCode{
  background: #EFEFEF;
border-radius: 5px;
width: 127px;
height: 32px;
margin: 0 auto;
margin-top: 32px;
text-align: center;
font-size: 13px;
color: #878787;
line-height: 32px;

}
.hint{
  font-size: 13px;
color: #AEAEAE;
text-align: center;
line-height: 30px;
}